<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#A0B9A0">

    <Button
        android:id="@+id/button_Beginner"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_Experienced"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#00897B"
        android:text="@string/button_Beginner" />

    <Button
        android:id="@+id/button_Experienced"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00897B"
        android:text="@string/button_experienced" />

</RelativeLayout>